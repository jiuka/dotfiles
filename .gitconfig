[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  mb = merge-base origin/HEAD HEAD
  go = "!sh -c 'git pull --rebase && git push'"
  tree = log --graph --all --format='format:%C(yellow)%h%Creset %Cgreen%d%Creset %s'
[color]
  ui = true
[core]
  excludesfile = /home/marius/.gitexclude
[push]
  default = simple
